@using SummerCamp.Models
@model IEnumerable<PlayerViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<h1 class="centered-title">Administreaza Jucatorii</h1>
<a asp-controller="Players" asp-action="Add" class="btn btn-primary">Adauga jucator</a>
<div class="text-center">
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-striped table-hover sortable">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6">No Records found.</td>
                </tr>
            }
            else
            {
                <thead class="thead-dark">
                    <tr>
                        <th> Nume</th>
                        <th>Echipa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@(item.TeamId  != null ? item.Team.Name : "N/A")</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Players" asp-route-playerId="@item.Id" class="btn btn-primary">
                                    Editare
                                </a>
                                <a asp-action="Delete" asp-controller="Players" asp-route-playerId="@item.Id" class="btn btn-primary">
                                    Stergere
                                </a>
                                <a asp-action ="Details" asp-controller="Players" asp-route-playerId="@item.Id" class="btn btn-secondary">
                                    Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>