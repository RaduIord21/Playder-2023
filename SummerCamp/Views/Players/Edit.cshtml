@{
    ViewData["Title"] = "Editeaza Playerul";
}

@model PlayerViewModel

<form id="myForm" asp-action="Edit" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <input asp-for="Id" hidden />

        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>

        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>

        <label asp-for="Adress"></label>
        <input asp-for="Adress" class="form-control" />
        <span asp-validation-for="Adress" class="text-danger"></span>

        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>

        <label asp-for="ShirtNumber"></label>
        <input asp-for="ShirtNumber" class="form-control" />
        <span asp-validation-for="ShirtNumber" class="text-danger"></span>

        <div class="form-group">
            <label asp-for="TeamId" class="control-label"></label>
            @Html.DropDownList("TeamId", (IEnumerable<SelectListItem>)ViewData["Teams"], "Selecteaza Echipa", new { @class = "form-control" })
            <span asp-validation-for="TeamId" class="text-danger"></span>
            @ViewData["Error"]
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salveaza modificarile</button>
    <a href="index" class="btn btn-primary">Renunta</a>
</form>