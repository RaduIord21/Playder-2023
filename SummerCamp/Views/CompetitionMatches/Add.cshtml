@{
    ViewData["Title"] = "Adauga Antrenor";
}
@model CompetitonMatchViewModel

<form id="myForm" asp-action="Add" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <input asp-for="CompetitionId" hidden class="form-control" />
        <label asp-for="AwayTeamId" class="control-label">Echipa Gazda</label>
        @Html.DropDownList("AwayTeamId", (IEnumerable<SelectListItem>)ViewData["AwayTeams"], "Selecteaza Echipa Gazda", new { @class = "form-control" })
        <span asp-validation-for="AwayTeamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HomeTeamId" class="control-label">Echipa Oaspete</label>
        @Html.DropDownList("HomeTeamId", (IEnumerable<SelectListItem>)ViewData["HomeTeams"], "Selecteaza Echipa Oaspete", new { @class = "form-control" })
        <span asp-validation-for="HomeTeamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AwayTeamGoals" class="control-label">Goluri Oaspeti</label>
        <input asp-for="AwayTeamGoals" class="control-label" min="0" max="100" />
        <span asp-validation-for="AwayTeamGoals" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HomeTeamGoals" class="control-label">Goluri Gazda</label>
        <input asp-for="HomeTeamGoals" class="control-label" min="0" max="100" />
        <span asp-validation-for="HomeTeamGoals" class="text-danger"></span>
    </div>
    <!-- Additional form fields and submit button -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Creeaza</button>
    <a href="index" class="btn btn-primary">Renunta</a>
</form>
