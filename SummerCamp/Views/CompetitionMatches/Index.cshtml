
@using SummerCamp.Models
@model IEnumerable<CompetitonMatchViewModel>

<h1> Meciurile zilei</h1>
<a asp-controller="CompetitionMatches" asp-action="Add" asp-route-CompetitionId=@ViewData["CompetitionId"] class="btn btn-primary">Adauga meci</a>
<div class="text-center">
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-striped table-hover sortable">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6">No Records found.</td>
                </tr>
            }
            else
            {
                <thead class="thead-dark">
                    <tr>
                        <th>Echipa Gazda</th>
                        <th>Echipa Oaspete</th>
                        <th>Goluri Gazda</th>
                        <th>Goluri Oaspete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HomeTeam.Name</td>
                            <td>@item.AwayTeam.Name</td>
                            <td>@item.HomeTeamGoals</td>
                            <td>@item.AwayTeamGoals</td>
                            <td>
                                <a asp-action="Edit" asp-controller="CompetitionMatches" asp-route-CompetitionMatchId="@item.Id" class="btn btn-primary">
                                    Editare
                                </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-controller="CompetitionMatches" asp-route-CompetitionMatchId="@item.Id" class="btn btn-primary">
                                    Stergere
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>
