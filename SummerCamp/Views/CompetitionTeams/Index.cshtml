@using SummerCamp.Models
@model IEnumerable<CompetitionTeamViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<h1 class="centered-title">Administreaza Echipele</h1>
<a asp-controller="CompetitionTeams" asp-action="Add" asp-route-CompetitionId=@ViewBag.CompetitionId  class="btn btn-primary">Adauga Echipele</a>
<div class="text-center">
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-striped table-hover sortable">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6">No Records found.</td>
                </tr>
            }
            else
            {
                <thead class="thead-dark">
                    <tr>
                        <th>Echipa</th>
                        <th>Puncte in Clasament</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Team.NickName</td>
                            <td>@item.TotalPoints</td> <!--/inpt type="number" value="item.TotalPoints"/>-->
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>