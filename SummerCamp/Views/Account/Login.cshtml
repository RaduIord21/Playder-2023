@{
    ViewData["Title"] = "Autentificare";
}

<h1>Autentificare</h1>

@model UserCredentialViewModel

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<form method="post" asp-action="Login">
    <div class="d-flex form-group m-2">
        <label for="username" class="align-self-center p-2">Username:</label>
        <input type="text" name="username" class="form-control w-25"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="d-flex form-group m-2">
        <label for="passwordHash" class="align-self-center p-2 me-1">Password: </label>
        <input type="password" name="passwordHash" class="form-control w-25"/>
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <div class="d-flex form-group m-2">
        <button type="submit" name="submit" class="btn btn-primary" style="width:24.5vw; margin:0;">Autentificare</button>
    </div>
</form>
<a asp-action="Register" asp-controller="Account">Nu ai cont? Inregistreaza-te!</a>
